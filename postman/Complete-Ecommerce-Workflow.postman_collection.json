{
  "info": {
    "name": "Complete E-commerce Workflow",
    "description": "End-to-end e-commerce flow: Register → Login → Browse Products → Create Order → Manage Inventory",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "",
      "type": "string"
    },
    {
      "key": "productId",
      "value": "",
      "type": "string"
    },
    {
      "key": "orderId",
      "value": "",
      "type": "string"
    },
    {
      "key": "orderNumber",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. API Gateway Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/",
          "host": ["{{baseUrl}}"],
          "path": [""]
        }
      }
    },
    {
      "name": "2. Check All Services Health",
      "item": [
        {
          "name": "User Service Health",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health/users",
              "host": ["{{baseUrl}}"],
              "path": ["health", "users"]
            }
          }
        },
        {
          "name": "Product Service Health",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health/products",
              "host": ["{{baseUrl}}"],
              "path": ["health", "products"]
            }
          }
        },
        {
          "name": "Order Service Health",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health/orders",
              "host": ["{{baseUrl}}"],
              "path": ["health", "orders"]
            }
          }
        },
        {
          "name": "Inventory Service Health",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health/inventory",
              "host": ["{{baseUrl}}"],
              "path": ["health", "inventory"]
            }
          }
        }
      ]
    },
    {
      "name": "3. User Registration & Authentication",
      "item": [
        {
          "name": "Register New User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('authToken', response.data.token);",
                  "    pm.collectionVariables.set('userId', response.data.user._id);",
                  "    console.log('User registered successfully:', response.data.user.name);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Alice Johnson\",\n  \"email\": \"alice.johnson@example.com\",\n  \"password\": \"password123\",\n  \"phone\": \"5551234567\",\n  \"address\": {\n    \"street\": \"789 Commerce Street\",\n    \"city\": \"San Francisco\",\n    \"state\": \"CA\",\n    \"zipCode\": \"94102\",\n    \"country\": \"USA\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('authToken', response.data.token);",
                  "    pm.collectionVariables.set('userId', response.data.user._id);",
                  "    console.log('User logged in successfully:', response.data.user.name);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"alice.johnson@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "login"]
            }
          }
        },
        {
          "name": "Get User Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users/profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "profile"]
            }
          }
        }
      ]
    },
    {
      "name": "4. Product Management",
      "item": [
        {
          "name": "Create Sample Product",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('productId', response.data.product._id);",
                  "    console.log('Product created:', response.data.product.name);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"MacBook Air M3\",\n  \"description\": \"Supercharged by the M3 chip, MacBook Air is a portable powerhouse. Get things done anywhere with up to 18 hours of battery life.\",\n  \"price\": 1299.99,\n  \"category\": \"Electronics\",\n  \"brand\": \"Apple\",\n  \"stock\": 25,\n  \"images\": [\n    \"https://example.com/macbook-air-m3-1.jpg\",\n    \"https://example.com/macbook-air-m3-2.jpg\"\n  ],\n  \"specifications\": {\n    \"processor\": \"Apple M3 chip\",\n    \"memory\": \"8GB unified memory\",\n    \"storage\": \"256GB SSD\",\n    \"display\": \"13.6-inch Liquid Retina\",\n    \"weight\": \"1.24 kg\",\n    \"color\": \"Space Gray\",\n    \"warranty\": \"1 year limited warranty\"\n  },\n  \"tags\": [\"laptop\", \"apple\", \"m3\", \"portable\", \"premium\"],\n  \"featured\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/products",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"]
            }
          }
        },
        {
          "name": "Browse All Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/products?page=1&limit=10&sort=price_desc",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "sort",
                  "value": "price_desc"
                }
              ]
            }
          }
        },
        {
          "name": "Search Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/products?search=MacBook&category=Electronics",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"],
              "query": [
                {
                  "key": "search",
                  "value": "MacBook"
                },
                {
                  "key": "category",
                  "value": "Electronics"
                }
              ]
            }
          }
        },
        {
          "name": "Get Product Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/products/{{productId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "{{productId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "5. Inventory Management",
      "item": [
        {
          "name": "Create Inventory Record",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"productId\": \"{{productId}}\",\n  \"productName\": \"MacBook Air M3\",\n  \"sku\": \"MBA-M3-256-SG\",\n  \"currentStock\": 25,\n  \"reorderLevel\": 5,\n  \"maxStock\": 100,\n  \"location\": {\n    \"warehouse\": \"Main Warehouse\",\n    \"section\": \"Electronics\",\n    \"shelf\": \"C3\",\n    \"bin\": \"003\"\n  },\n  \"supplier\": {\n    \"name\": \"Apple Inc.\",\n    \"contact\": \"+1-800-APL-CARE\",\n    \"email\": \"b2b@apple.com\"\n  },\n  \"costPrice\": 999.99\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/inventory",
              "host": ["{{baseUrl}}"],
              "path": ["api", "inventory"]
            }
          }
        },
        {
          "name": "Check Inventory Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/inventory/{{productId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "inventory", "{{productId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "6. Order Processing",
      "item": [
        {
          "name": "Create Order",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('orderId', response.data.order._id);",
                  "    pm.collectionVariables.set('orderNumber', response.data.order.orderNumber);",
                  "    console.log('Order created:', response.data.order.orderNumber);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"userEmail\": \"alice.johnson@example.com\",\n  \"items\": [\n    {\n      \"productId\": \"{{productId}}\",\n      \"quantity\": 1\n    }\n  ],\n  \"shippingAddress\": {\n    \"fullName\": \"Alice Johnson\",\n    \"street\": \"789 Commerce Street\",\n    \"city\": \"San Francisco\",\n    \"state\": \"CA\",\n    \"zipCode\": \"94102\",\n    \"country\": \"USA\",\n    \"phone\": \"5551234567\"\n  },\n  \"paymentMethod\": \"credit_card\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/orders",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders"]
            }
          }
        },
        {
          "name": "Get Order Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/orders/{{orderId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "{{orderId}}"]
            }
          }
        },
        {
          "name": "Reserve Inventory for Order",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"quantity\": 1,\n  \"orderId\": \"{{orderId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/inventory/{{productId}}/reserve",
              "host": ["{{baseUrl}}"],
              "path": ["api", "inventory", "{{productId}}", "reserve"]
            }
          }
        },
        {
          "name": "Update Payment Status to Paid",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"paymentStatus\": \"paid\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/orders/{{orderId}}/payment",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "{{orderId}}", "payment"]
            }
          }
        },
        {
          "name": "Update Order to Processing",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"processing\",\n  \"notes\": \"Order payment confirmed, preparing for shipment\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/orders/{{orderId}}/status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "{{orderId}}", "status"]
            }
          }
        },
        {
          "name": "Update Order to Shipped",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"shipped\",\n  \"trackingNumber\": \"1Z999AA1234567890\",\n  \"estimatedDelivery\": \"2024-01-25T15:00:00.000Z\",\n  \"notes\": \"Package shipped via UPS Ground\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/orders/{{orderId}}/status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "{{orderId}}", "status"]
            }
          }
        },
        {
          "name": "Fulfill Inventory (Complete Order)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"quantity\": 1,\n  \"orderId\": \"{{orderId}}\",\n  \"fulfill\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/inventory/{{productId}}/release",
              "host": ["{{baseUrl}}"],
              "path": ["api", "inventory", "{{productId}}", "release"]
            }
          }
        },
        {
          "name": "Update Order to Delivered",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"delivered\",\n  \"notes\": \"Package delivered successfully to customer\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/orders/{{orderId}}/status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "{{orderId}}", "status"]
            }
          }
        }
      ]
    },
    {
      "name": "7. Order History & Analytics",
      "item": [
        {
          "name": "Get User Order History",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/orders/user/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "user", "{{userId}}"]
            }
          }
        },
        {
          "name": "Get Order by Number",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/orders/number/{{orderNumber}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "number", "{{orderNumber}}"]
            }
          }
        },
        {
          "name": "Get Order Statistics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/orders/stats/summary",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "stats", "summary"]
            }
          }
        },
        {
          "name": "Get Inventory Statistics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/inventory/stats/summary",
              "host": ["{{baseUrl}}"],
              "path": ["api", "inventory", "stats", "summary"]
            }
          }
        },
        {
          "name": "Get Inventory Movements",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/inventory/{{productId}}/movements",
              "host": ["{{baseUrl}}"],
              "path": ["api", "inventory", "{{productId}}", "movements"]
            }
          }
        }
      ]
    },
    {
      "name": "8. Additional Operations",
      "item": [
        {
          "name": "Get Low Stock Alerts",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/inventory/alerts/low-stock",
              "host": ["{{baseUrl}}"],
              "path": ["api", "inventory", "alerts", "low-stock"]
            }
          }
        },
        {
          "name": "Get Product Categories",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/products/categories/list",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "categories", "list"]
            }
          }
        },
        {
          "name": "Get Product Brands",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/products/brands/list",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "brands", "list"]
            }
          }
        },
        {
          "name": "Restock Inventory",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"quantity\": 50,\n  \"type\": \"in\",\n  \"reason\": \"Monthly restock from supplier\",\n  \"reference\": \"PO-2024-002\",\n  \"performedBy\": \"inventory_manager\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/inventory/{{productId}}/stock",
              "host": ["{{baseUrl}}"],
              "path": ["api", "inventory", "{{productId}}", "stock"]
            }
          }
        }
      ]
    }
  ]
}
